#version 420

layout(location = 0) in vec4 vVertex;
layout(location = 2) in vec3 vNormal;

uniform mat4 mMatrix;
uniform mat4 mvpMatrix;

out vec3 normal;
out vec4 position;
out mat4 modelMatrix;

void main(void)
{
    normal = vNormal;
    position = vVertex * mMatrix;
    modelMatrix = mMatrix;
    gl_Position = vVertex * mvpMatrix;
}
